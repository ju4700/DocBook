<form action="/bookings/new/<%= doctorId %>" method="POST" enctype="multipart/form-data">
    <input type="hidden" name="userId" value="<%= userId %>">

    <label for="date">Pick a date:</label>
    <input type="date" id="date" name="date" required>
    
    <label for="report">Upload your previous report:</label>
    <input type="file" id="report" name="report" accept="application/pdf,image/*" required>
    
    <button type="submit">Book Appointment</button>

    <% if (error) { %>
        <p style="color: red; font-weight: bold;"><%= error %></p>
    <% } %>
</form>

<% if (successMessage) { %>
    <p style="color: green; font-weight: bold;">Booking successful! Please check your notifications for confirmation.</p>
<% } %>
